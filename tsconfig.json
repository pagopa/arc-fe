{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "esnext.asynciterable", "es5"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "paths": {
      "@/*": ["/*"]
     }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  
}
